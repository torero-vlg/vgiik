@model T034.ViewModel.RoleViewModel

@{
    ViewBag.Title = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddOrEdit", "Role"))
{
    <div class="control-group warning">
        <label class="control-label">@Html.LabelFor(m => m.Name)</label>
        <div>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.HiddenFor(m => m.Id)
        </div>
        
        <label class="control-label">@Html.LabelFor(m => m.Code)</label>
        <div>
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        </div>

        <div>
            @{
                for (int i = 0; i < Model.WebPermissions.Count(); i++)
                {
                    @Html.CheckBoxFor(m => m.WebPermissions[i].Selected)
                    @Html.HiddenFor(m => m.WebPermissions[i].Id)
                    @Html.LabelFor(m => m.WebPermissions[i].Selected, Model.WebPermissions[i].Name)
                    <br />
                }

            }
        </div>

    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    </div>
}
