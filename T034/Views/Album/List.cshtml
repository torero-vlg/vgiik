@model IEnumerable<T034.ViewModel.AlbumViewModel>

@{
    ViewBag.Title = "Альбомы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Добавить", "AddOrEdit", "Album")

<h2>Альбомы</h2>

<table id="albumTable" class="display">
    <thead>
        <tr>
            <th>Код</th>
            <th>Название</th>
            <th>Принадлежность</th>
            <th>Операции</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.Department@item.Person@item.Veteran</td>
        <td>
            <a href="@Url.Action("Index", new { id = item.Id})" title="Подробнее"><i class="fa fa-square-o" aria-hidden="true"></i></a>
            <a href="@Url.Action("AddOrEdit", new { id = item.Id})" title="Редактировать"><i class="fa fa-pencil" aria-hidden="true"></i></a>
            <a href="@Url.Action("Delete", new { id = item.Id})" title="Удалить"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
      </tr>
    }
    </tbody>
</table>

