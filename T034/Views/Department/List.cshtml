@model IEnumerable<T034.ViewModel.DepartmentViewModel>

@{
    ViewBag.Title = "Подразделения";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ActionLink("Добавить", "AddOrEdit", "Department")

<table id="departmentTable" class="display">
    <thead>
        <tr>
            <th>Код</th>
            <th>Название</th>
            <th>Операции</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    @Html.ActionLink("Подробнее", "Index", new { id = item.Id })
                    @Html.ActionLink("Редактировать", "AddOrEdit", new { id = item.Id })
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>