@model T034.ViewModel.PersonViewModel

<h3>@string.Format("{0} - {1}", Model.FullName, Model.Title)</h3>


@Html.Raw(HttpUtility.HtmlDecode(Model.Text))


@for (var i = 0; i < Model.Files.Count(); i++)
{
    <p><a href="@Url.Content("~" + Model.FilesFolder + Model.Files.ToList()[i])" alt="...">@Model.Files.ToList()[i]</a></p>
}


@{
    foreach (var carousel in Model.Docs)
    {
        Html.RenderPartial("Carousel", carousel);
    }
}
<br>
<div class="text text-center">
@{
    foreach (var video in Model.Videos)
    {
       <iframe width="@video.Width" height="@video.Height" src="@video.Source" frameborder="0" allowfullscreen></iframe>
    }
}
</div>