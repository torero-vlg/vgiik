@using T034.Tools
@model T034.ViewModel.UserViewModel

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">T034</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
          <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Содержимое<span class="caret"></span></a>
              <ul class="dropdown-menu">
                  <li>@Html.PermissionActionLink("Люди", "List", "Person")</li>
                  <li>@Html.PermissionActionLink("Ветераны", "List", "Veteran")</li>
                  <li>@Html.PermissionActionLink("Альбомы", "List", "Album")</li>
                  <li>@Html.PermissionActionLink("Подразделения", "List", "Department")</li>
               </ul>
          </li>
          @if (Request.HasUserPermissions("Администрирование"))
