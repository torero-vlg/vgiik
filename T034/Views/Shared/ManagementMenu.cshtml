                  <ul class="dropdown-menu">
                      <li>@Html.PermissionActionLink("Пользователи", "List", "User")</li>
                      <li>@Html.PermissionActionLink("Роли", "List", "Role")</li>
                      <li role="separator" class="divider"></li>
                      <li>@Html.PermissionActionLink("Настройки", "List", "Setting")</li>
                  </ul>
              </li>
          }
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
